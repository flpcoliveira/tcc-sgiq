
@{
    ViewData["Title"] = "Medição";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            Dados da Medição
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <form role="form">
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label>Projeto</label>
                                <select class="form-control select2" data-placeholder="Selecione o Projeto">
                                    <option></option>
                                    <option value="1">Felipe Cristo de Oliveira</option>
                                    <option value="2">Walid Arnous Alves</option>
                                </select>
                            </div>
                            <div class="form-group col-lg-12">
                                <label>Métrica</label>
                                <select class="form-control select2" data-placeholder="Selecione a Métrica">
                                    <option></option>
                                    <option value="1">Felipe Cristo de Oliveira</option>
                                    <option value="2">Walid Arnous Alves</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <table class="table table-responsive">
                                    <thead>
                                        <tr>
                                            <th>Nome da Medida</th>
                                            <th>Tipo de Dado</th>
                                            <th>Valor</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="col-lg-4">Medida 2</td>
                                            <td class="col-lg-4">Inteiro</td>
                                            <td class="col-lg-4"><input type="text" class="form-control" /></td>
                                        </tr>
                                        <tr>
                                            <td class="col-lg-4">Medida 4</td>
                                            <td class="col-lg-4">Flutuante</td>
                                            <td class="col-lg-4"><input type="text" class="form-control" /></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i><span> Salvar</span></button>
                        <button type="button" class="btn btn-danger"><i class="fa fa-ban"></i><span> Cancelar</span></button>
                    </form>
                </div>
            </div>
            <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

